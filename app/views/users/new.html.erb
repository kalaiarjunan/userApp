<div align ="center">
<h2>Sign Up</h2>
<%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
 	<% if @user.errors.any? %>
    	<div id="error_explanation">
	      	<% @user.errors.full_messages.each do |msg| %>
	       	 <li><%= msg %></li>
	        <% end %>
	        </ul>
        </div>
 	<% end %>
<table>
	<tr><td> Username:</td>
<td> <%= f.text_field :username%></td> </tr>

	<tr><td> Password:</td><td> <%= f.password_field :password%></td></tr>

	<tr><td> Email:</td><td> <%= f.text_field :email%></td> </tr>
	<tr><td> Mob:</td><td> <%= f.text_field :mobile%></td> </tr>
</br>
<tr><td></td><td> <%= f.submit :Signup %></td></tr>
</table>
<% end %>
</div>

